{
  "ConnectionStrings": {
    "HotelListingDbConnectionString": "Server=(localdb)\\mysqllocaldb;Database=HotelListApiDb;Trusted_Connection=True;MultipleActiveResultSets=True;"
  },


  "Serilog": {
    "MinimumnLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "https://localhost:5341/" }
      }
    ]
  },
  "AllowedHosts": "*"
}

